<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Pokedex <%= locals?.title && ` | ${title}` %></title>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col overflow-y-scroll">
    <div><%- include('partials/header.ejs') %></div>
    <div
      class="flex flex-col w-full grow my-8 max-w-screen-xl mx-auto px-2 sm:px-8"
    >
      <%- body %>
    </div>
    <div><%- include('partials/footer.ejs') %></div>
    <% if (locals?.script) { %>
      <%- script %>
    <% } %>
  </body>
</html>
