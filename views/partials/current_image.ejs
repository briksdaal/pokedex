<div class="mb-4 mt-2">
  <% if (image.url) { %>
    <div class="mb-2">
      <h4 class="block text-md mb-2">Current Image:</h4>
        <div class="flex justify-center w-40 h-40">
      <img src="<%= image.url %>" alt="<%= image.name %>" class="w-full h-full object-contain">
        </div>
    </div>
  <% } %>
  <div class="flex gap-4 items-center">
    <label for="<%= id %>" class="block text-md"><%= label %></label>
    <input
      class="border-0 bg-transparent py-1.5 pl-3 pr-1 text-gray-900 outline-none focus:ring-0 sm:leading-6"
      id="<%= id %>"
      name="<%= id %>"
      type="checkbox"
    />
  </div>
</div>
