<div>
  <form action="<%= locals?.id ? `/types/${id}` : '/types'%>" method="POST">
    <div class="mb-4">
      <label for="type" class="block text-lg mb-2">Type</label>
      <div
        class="flex rounded-md ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-gray-600 sm:max-w-sm"
      >
        <input
          class="flex-1 border-0 bg-transparent py-1.5 pl-3 pr-1 text-gray-900 outline-none focus:ring-0 sm:leading-6"
          id="type"
          name="type"
          type="text"
          value="<%= locals?.type?.type || '' %>"
        />
      </div>
    </div>
    <div class="mb-4">
      <label for="color" class="block text-lg mb-2">Color</label>
      <input
        class="block w-16 h-16"
        id="color"
        name="color"
        type="color"
        value="<%= locals?.type?.color ? `#${type.color}` :  '#aaaa99' %>"
      />
    </div>
    <div>
      <button
        type="submit"
        class="text-md rounded-md px-6 py-2 font-bold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 bg-mantis-400 hover:bg-mantis-300 focus-visible:outline-mantis-400 disabled:bg-mantis-300"
      >
        <%= locals?.id ? 'Update' : 'Create' %>
      </button>
    </div>
  </form>
</div>
<%- include('errors') %>
