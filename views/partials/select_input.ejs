<div class="mb-4">
  <label for="<%= id %>" class="block text-lg mb-2"><%= label %></label>
  <div
    class="flex rounded-md ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-gray-600 sm:max-w-sm"
  >
    <select
      class="flex-1 border-0 bg-transparent py-1.5 pl-3 pr-1 text-gray-900 outline-none focus:ring-0 sm:leading-6"
      id="<%= id %>"
      name="<%= id %>"
      type="text"
    >
      <option <%= !value ? 'selected' : '' %> value="">-- Please select --</option>
        <% options.forEach(o => { %>
            <option
            value="<%= o.id %>"
            <%= value == o.id ? 'selected' : '' %>
              ><%= o[optionsLabel] %></option>        
        <% }) %>
    </select>
  </div>
</div>
