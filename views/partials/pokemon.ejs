<% if (pokemon?.length && pokemon.length > 0) { %>
    <ul class="flex flex-col gap-4">
        <% pokemon.forEach((p) => { %>
            <li class="flex">
                <a href="/pokemon/<%= p.id %>" class="text-blue-600 hover:underline">
                    <div class="flex gap-2 items-center">
                        <div class="w-8 h-8 p-1">
                            <img src="<%= p.image || "https://res.cloudinary.com/dadnu9xkc/image/upload/v1724543191/pokedex/pokeball.png" %>" alt="<%= p.image ? p.name : "pokeball" %>" class="w-full h-full object-contain">
                        </div>
                        <h3><%- p.name %></h3>
                    </div>
                </a>
            </li>
        <% })%>
    </ul>
<% } else { %>
    <p>None defined</p>
<% } %>


