<h1 class="text-3xl mb-8"><%= type.type %> Type</h1>
<div class="flex flex-col gap-4">
  <h2 class="text-xl">Type Color:</h2>
  <div class="flex items-center gap-8">
    <div class="w-16 h-16" style="background: #<%= type.color%>"></div>
    <div>Color Code: #<%= type.color%></div>
  </div>
  <div class="flex gap-8">
    <a href=<%= `/types/${type.id}/edit` %> class="text-blue-600 hover:underline">Edit</a>
    <a href=<%= `/types/${type.id}/delete` %> class="text-blue-600 hover:underline">Delete</a>
  </div>
  <div>
    <h2 class="text-xl mb-2"><%= type.type %> type Pokemon:</h2>
    <%- include('partials/pokemon', {pokemon: pokemon}) %>
  </div>
</div>
